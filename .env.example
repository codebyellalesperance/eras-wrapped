OPENAI_API_KEY=your_openai_api_key_here
# Or if using Anthropic:
# ANTHROPIC_API_KEY=your_api_key_here

# Spotify OAuth
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:5001/callback

FLASK_ENV=development
# Comma-separated list of allowed origins for CORS (use * for development)
ALLOWED_ORIGINS=*

# LLM Configuration
LLM_PROVIDER=openai
# For OpenAI: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# For Anthropic: claude-3-haiku-20240307, claude-3-sonnet-20240229
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=30
